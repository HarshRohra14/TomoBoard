{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/**", "uploads/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret", 
    "JWT_REFRESH_SECRET": "@jwt_refresh_secret",
    "ALLOWED_ORIGINS": "@allowed_origins"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}